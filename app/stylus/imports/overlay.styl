.loading-overlay
    z-index 5
    position fixed
    top 0
    left 0
    width 100vw
    height 100%
    opacity 1
    transition ease-in-out 0.5s opacity
    background-color main-red
    padding-top 30vh
    @media screen and (max-width mobile-breakpoint)
            padding-top 15vh
    .loading-image
        position relative
        z-index 1
        width 200px
        height 300px
        margin 0 calc(50vw - 100px)
        background-image url("img/loading.png")
        background-size cover
        background-position center
    p
        color white
        text-align center
        font-family 'FuturaHeavy'
        font-size 3em
        @media screen and (max-width mobile-breakpoint)
            font-size 2em